<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/custom_card_elevation"
    app:cardCornerRadius="@dimen/custom_card_corner_size"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/iv_product_pic"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:padding="@dimen/custom_padding_small"
            android:src="@drawable/ic_launcher_background"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:padding="@dimen/custom_padding_small">

            <TextView
                android:id="@+id/tv_sku_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/custom_padding_small"
                style="@style/TextAppearance.MaterialComponents.Overline"
                android:text="SKU :"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_sku_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/custom_padding_small"
                android:text="ED459687"
                style="@style/TextAppearance.MaterialComponents.Body2"
                app:layout_constraintTop_toBottomOf="@id/tv_sku_title"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/div1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_div_height"
                android:layout_marginTop="0dp"
                android:layout_marginStart="@dimen/custom_margins"
                android:layout_marginEnd="@dimen/custom_margins"
                android:layout_marginBottom="0dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/tv_sku_value"/>

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/custom_padding_small"
                style="@style/TextAppearance.MaterialComponents.Overline"
                android:text="PRODUCTO :"
                app:layout_constraintTop_toBottomOf="@+id/div1"/>

            <TextView
                android:id="@+id/tv_product_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/custom_padding_small"
                android:text="Caja Ritz 18 piezas"
                style="@style/TextAppearance.MaterialComponents.Body2"
                app:layout_constraintTop_toBottomOf="@id/tv_product_title"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/div2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_div_height"
                android:layout_marginTop="0dp"
                android:layout_marginStart="@dimen/custom_margins"
                android:layout_marginEnd="@dimen/custom_margins"
                android:layout_marginBottom="0dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/tv_product_value"/>

            <TextView
                android:id="@+id/tv_package_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/custom_padding_small"
                style="@style/TextAppearance.MaterialComponents.Overline"
                android:text="EMPAQUE :"
                app:layout_constraintTop_toBottomOf="@+id/div2"/>

            <TextView
                android:id="@+id/tv_package_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/custom_padding_small"
                android:text="Caja"
                style="@style/TextAppearance.MaterialComponents.Body2"
                app:layout_constraintTop_toBottomOf="@id/tv_package_title"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/div3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_div_height"
                android:layout_marginTop="0dp"
                android:layout_marginStart="@dimen/custom_margins"
                android:layout_marginEnd="@dimen/custom_margins"
                android:layout_marginBottom="0dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/tv_package_value"/>

            <TextView
                android:id="@+id/tv_qtyxpckg_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/custom_padding_small"
                style="@style/TextAppearance.MaterialComponents.Overline"
                android:text="PIEZAS POR EMPAQUE :"
                app:layout_constraintTop_toBottomOf="@+id/div3"/>

            <TextView
                android:id="@+id/tv_qtyxpckg_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/custom_padding_small"
                android:text="18"
                style="@style/TextAppearance.MaterialComponents.Body2"
                app:layout_constraintTop_toBottomOf="@id/tv_qtyxpckg_title"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>